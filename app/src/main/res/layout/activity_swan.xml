<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".SwanActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="h,2:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.053"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sdu2"/>

        <Button
            android:id="@+id/plus_button"
            android:layout_width="88dp"
            android:layout_height="83dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/plus"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view"/>

        <TextView
            android:id="@+id/content_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="                หม่อมหลวงปิ่น มาลากุล ได้เขียนบทละครสังคีต เรื่อง “หงส์ทอง” ให้กับวิทยาลัยครูสวนดุสิตโดยเขียนตามเค้าเรื่อง Le Lac des Cygnes ของ Piotor ILich Tchaibowsky หรือ Swan Lake (โดยปีเตอร์อิลิชไชคอฟ สกี นำมาแต่งบัลเล่ต์หรือระบำปลายเท้าขนาดเล็ก Lebedinoje osero ซึ่งมีการแสดงดนตรีประกอบการระบำปลายเท้า มีการจัดแสดงที่โรงละคร Bolshoi กรุงมอสโกและอีกหลายโรงละคร) หม่อมหลวงปิ่น มาลากุล จึงได้นำเค้าเรื่องดังกล่าวมาประยุกต์กับบทละครและให้มีการจัดแสดงครั้งแรกในงานแจกประกาศนียบัตรของนักศึกษาวิทยาลัยครูสวนดุสิต เมื่อวันที่ ๑๐ มีนาคม ปีพุทธศักราช ๒๕๑๐ ในปีต่อมาเมื่อมีผู้นิยมชมละครที่นักศึกษาแสดงมากขึ้น ผู้อำนวยการของวิทยาลัยครูสวนดุสิต ขณะนั้น (คุณหญิงกระจ่างศรี รักตะกนิษฐ) จึงได้คิดที่จะทำให้เกิดประโยชน์กับนักศึกษาที่ขาดแคลนทุนทรัพย์ จึงจัดให้นักศึกษาไปแสดงเรื่อง “หงส์ทอง” ทางวิทยุ โทรทัศน์ มีผู้บริจาคเงินเพื่อตั้งเป็นกองทุนการศึกษา เรียกว่า “ทุนหงส์ทอง” จำนวนมากโดยจัดแสดงในวันที่ ๒๔ ตุลาคม ปีพุทธศักราช ๒๕๑๑ เนื่องในวันคล้ายวันเกิดของ หม่อมหลวงปิ่น มาลากุล และ วิทยาลัยครูสวนดุสิต ถือว่า วันที่ ๒๔ ตุลาคม เป็น “วันหงส์ทอง” มีการมอบทุนการศึกษา และรับเงิน สมทบทุนเพิ่มเติม ในวัน “หงส์ทอง”"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="@+id/image_view"
            app:layout_constraintStart_toStartOf="@+id/image_view"
            app:layout_constraintTop_toBottomOf="@+id/plus_button"/>

        <Button
            android:id="@+id/ar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="AR"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_text_view"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>