<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".fragment.MenuMainFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="h,2:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.053"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sdu2"/>

        <Button
            android:id="@+id/plus_button"
            android:layout_width="88dp"
            android:layout_height="83dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/plus"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view"/>

        <TextView
            android:id="@+id/content_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="          มหาวิทยาลัยสวนดุสิตจัดตั้งขึ้นเพื่อเป็นโรงเรียนการเรือนแห่งแรกของประเทศไทย ชื่อ“โรงเรียนมัธยมวิสามัญการเรือน” สังกัดกองอาชีวศึกษา กรมวิชาการ กระทรวงธรรมการ (กระทรวงศึกษาธิการ) เปิดดำเนินการเมื่อวันที่ 17 พฤษภาคม พ.ศ.2477 ที่วังกรมหลวงชุมพรเขตอุดมศักดิ์ (ปัจจุบันเป็นที่ตั้งของมหาวิทยาลัย-เทคโนโลยีราชมงคล วิทยาเขตพณิชยการพระนคร) มีจุดมุ่งหมายเพื่ฝึกอบรมการบ้านการเรือนสำหรับสตรีหลักสูตร 4 ปี"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="@+id/image_view"
            app:layout_constraintStart_toStartOf="@+id/image_view"
            app:layout_constraintTop_toBottomOf="@+id/plus_button"/>

        <Button
            android:id="@+id/ar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="AR"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_text_view"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>